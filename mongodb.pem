# Step 1: Generate a private key and certificate (valid for 365 days)
openssl req -newkey rsa:2048 -new -x509 -days 365 -nodes \
  -out mongodb-cert.crt -keyout mongodb-key.key \
  -subj "/C=IN/ST=State/L=City/O=YourOrg/OU=IT/CN=localhost"

# Step 2: Combine certificate and key into one .pem file
cat mongodb-key.key mongodb-cert.crt > mongodb.pem
